include "iconrc"

style "default" {

    GtkButton::default_border         = {0, 0, 0, 0}
    GtkButton::default_outside_border = {0, 0, 0, 0}
    GtkButton::default_spacing        = 5
    GtkCheckButton::indicator_size    = 11
    GtkMenuItem::selected_shadow_type = etched-in
    GtkPaned::handle_full_size        = 4
    GtkPaned::handle_size             = 8
    GtkRadioButton::indicator_size    = 11
    GtkRange::slider_width            = 15
    GtkRange::stepper_size            = 15
    GtkRange::stepper_spacing         = 0
    GtkRange::trough_border           = 1
    GtkScrollbar::min_slider_length   = 20
    GtkSpinButton::shadow_type        = etched-in
    GtkStatusbar::shadow_type         = none
    GtkWidget::internal_padding       = 0
    GtkWidget::focus_padding          = 2
    GtkWidget::focus-line-pattern     = "\1"
    GtkWidget::focus-line-width       = 1
    GtkWidget::interior_focus         = 5
    GtkMenuBar::shadow_type           = in
    GtkToolbar::shadow_type           = in
    GtkButton::child_displacement_x   = 0
    GtkButton::child_displacement_y   = 0

    xthickness = 2
    ythickness = 2

    base[ACTIVE]      = "#A59AB5"
    base[INSENSITIVE] = "#B5AAC6"
    base[NORMAL]      = "#FFFFFF"
    base[PRELIGHT]    = "#FCFCFC"
    base[SELECTED]    = "#94869C"

    bg[ACTIVE]        = "#ECECEC"
    bg[INSENSITIVE]   = "#D8D8D8"
    bg[NORMAL]        = "#EAEAEA"
    bg[PRELIGHT]      = "#A59AB5"
    bg[SELECTED]      = "#B5AAC5"

    fg[ACTIVE]        = "#6A6277"
    fg[INSENSITIVE]   = "#B5AAC5"
    fg[NORMAL]        = "#000000"
    fg[PRELIGHT]      = "#000000"
    fg[SELECTED]      = "#FFFFFF"

    text[ACTIVE]      = "#000000"
    text[INSENSITIVE] = "#000000"
    text[NORMAL]      = "#000000"
    text[PRELIGHT]    = "#000000"
    text[SELECTED]    = "#FFFFFF"

    engine "smooth" {

        fill {
          style = gradient
          quadratic  = false
          hdirection = vertical
          vdirection = vertical
          color1[PRELIGHT] = "#B5AAC5"
          color2[PRELIGHT] = "#A59AB5"
          color1[SELECTED] = "#A59AB5"
          color2[SELECTED] = "#B5AAC5"
          color1[NORMAL]   = "#F3F3F3"
          color2[NORMAL]   = "#DEDEDE"
          color1[INSENSITIVE] = "#EAEAEA"
          color2[INSENSITIVE] = "#D5D5D5"
        }

        line {
          style = flat
          thickness = 1
        }

        grip {
          style = dots_out
          toolbar_overlap = FALSE
          line {
            style = smooth
            thickness = 2
          }
          fill {
            style = solid
          }
        }

        check {
          style = clean
          motif = true
          line {
            style = smooth
            thickness = 2
          }
          fill {
            style=solid
            hdirection = fdiagonal
            vdirection = fdiagonal
            color1[PRELIGHT] = "#B5AAC5"
            color2[PRELIGHT] = "#A59AB5"
            color1[SELECTED] = "#A59AB5"
            color2[SELECTED] = "#B5AAC5"
            color1[NORMAL]   = "#F3F3F3"
            color2[NORMAL]   = "#DEDEDE"
            color1[INSENSITIVE] = "#EAEAEA"
            color2[INSENSITIVE] = "#D5D5D5"
          }
        }

        option {
          style = round
          motif = true
          line {
            style = smooth
            thickness = 2
          }
          fill {
            style=gradient
            quadratic  = false
            hdirection = fdiagonal
            vdirection = fdiagonal
            color1[PRELIGHT] = "#B5AAC5"
            color2[PRELIGHT] = "#A59AB5"
            color1[SELECTED] = "#A59AB5"
            color2[SELECTED] = "#B5AAC5"
            color1[NORMAL]   = "#F3F3F3"
            color2[NORMAL]   = "#DEDEDE"
            color1[INSENSITIVE] = "#EAEAEA"
            color2[INSENSITIVE] = "#D5D5D5"
          }
        }

        arrow {
          style  = wonderland
          solid  = TRUE
          etched = FALSE
        }

        tab_style = square
    }
}

widget_class "*"		style "default"

style "xfce-colored" = "xfce-default" {

    xthickness = 2
    ythickness = 2

    bg[ACTIVE]     = "#D6D6D6"
    bg[PRELIGHT]   = "#84799C"

    fg[ACTIVE]     = "#000000"
    fg[PRELIGHT]   = "#FCFCFC"

    text[ACTIVE]   = "#000000"
    text[PRELIGHT] = "#FCFCFC"

    engine "xfce" {

        smooth_edge = true
        boxfill {
          fill_style  = gradient
          orientation = vertical
          shade_start = 1.05
          shade_end = 0.95
        }
    }
}

