style "metacity-frame" {

    bg[SELECTED] = "#9E91AA"

    engine "smooth" {

        fill {
          style = gradient
          hdirection = vertical
          vdirection = horizontal			
          color1[PRELIGHT] = "#B5AAC5"
          color2[PRELIGHT] = "#A59AB5"
          color1[SELECTED] = "#A59AB5"
          color2[SELECTED] = "#B5AAC5"
          color1[NORMAL]   = "#F3F3F3"
          color2[NORMAL]   = "#E4DCEC"
          color1[INSENSITIVE] = "#E4DCEC"
          color2[INSENSITIVE] = "#D1CADA"
	}

	line {
	  style = smooth
	  thickness = 2
	}
    }
}

