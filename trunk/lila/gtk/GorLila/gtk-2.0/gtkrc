style "infobar" {

    bg[PRELIGHT] = "#B5AAC5"
    xthickness = 1
    ythickness = 1

    engine "smooth" {
	
        real_sliders = FALSE
        fill {
          style=shaded
          hdirection = vertical
          vdirection = horizontal
          shade1 = 1.4
          shade2 = 1.2
        }

        progress {
          line {
            style = flat
            thickness = 2
          }
        }

        trough {
          line {
            style = flat
            thickness = 2
          }
          fill {
            style = solid
          }
        }
    }
}

